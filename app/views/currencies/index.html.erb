<p id="notice"><%= notice %></p>

<h1>Monedas</h1>
<div class="card" style="margin: 10px;">
  <div class="card-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Slug</th>
          <th>Symbol</th>
          <th>Interest</th>
          <th colspan="2"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @currencies.each do |currency| %>
          <tr>
            <td><%= currency.slug %></td>
            <td><%= currency.symbol %></td>
            <td><%= currency.interest %></td>
            <td><%= link_to 'ver detalle', currency %></td>
            <td><%= link_to 'Editar', edit_currency_path(currency) %></td>
           
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>


